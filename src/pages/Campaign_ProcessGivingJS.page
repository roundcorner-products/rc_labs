    //
    
    rc_connect.reloadCampaignProducts = function() {
        // Deselect and disable all the current ask amounts 
        $('.campaignProduct', rc_connect.form_context).each(function() {
            $(this).removeClass('selected');
            $(this).css('opacity', '0.30');
        });
        
